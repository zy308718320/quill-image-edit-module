{
  "compilerOptions": {
    "types": [
      "jest"
    ],
    "target": "es5",
    "module": "esnext",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "moduleResolution": "node",
    "downlevelIteration": true,
    "baseUrl": ".",
    "paths": {
      "parchment": [
        "node_modules/parchment/src/parchment"
      ]
    }
  },
  "include": [
    "src",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/tests/*",
    "src/assets"
  ]
}
